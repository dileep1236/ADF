{
	"name": "Write data collection to ADLS Gen2 or Blob Storage",
	"properties": {
		"description": "Writes to files in the specified Azure Data Lake Storage Gen2 account or Azure Blob Storage account, in loop until all items in the provided data collection is saved.",
		"activities": [
			{
				"name": "Save each file",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.inputData",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Save to Data Lake",
							"type": "WebActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"method": "PUT",
								"headers": {
									"x-ms-blob-type": "BlockBlob",
									"x-ms-version": "2017-11-09"
								},
								"url": {
									"value": "@concat(pipeline().parameters.storageAccount,'/',pipeline().parameters.storageFolder,'/',item().resource.id)",
									"type": "Expression"
								},
								"body": {
									"value": "@item().resource",
									"type": "Expression"
								},
								"authentication": {
									"type": "MSI",
									"resource": "https://storage.azure.com/"
								}
							}
						}
					]
				}
			}
		],
		"parameters": {
			"storageAccount": {
				"type": "string"
			},
			"storageFolder": {
				"type": "string"
			},
			"inputData": {
				"type": "array"
			}
		},
		"folder": {
			"name": "Load"
		},
		"annotations": [],
		"lastPublishTime": "2023-03-22T20:40:53Z"
	}
}